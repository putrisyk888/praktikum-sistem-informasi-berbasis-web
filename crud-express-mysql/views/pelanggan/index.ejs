<!DOCTYPE html>
<html lang="en">
<head>
    <title>CRUD Pelanggan</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css">
</head>
<body class="container" mt-5>
    <h2 class="mb-4">Data Pelanggan</h2>
    <a href="/add-pelanggan" class="btn btn-primary mb-3">Tammbah Data Pelanggan</a>
    <table class="table table-bordered">
        <thead>
            <tr><th>ID Pelanggan</th>
                <th>Nama Pelanggan</th>
                <th>Alamat Pelanggan</th>
                <th>No Hp</th>
                <th>File</th>
                <th>Foto</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% pelanggan.forEach(pelanggan => { %>
                <tr>
                    <td><%= pelanggan.id_pelanggan %></td>
                    <td><%= pelanggan.nama_pelanggan %></td>
                    <td><%= pelanggan.alamat_pelanggan %></td>
                    <td><%= pelanggan.no_hp %></td>
                    <td><%= pelanggan.filename %></td>
                    <td><img src="<%= pelanggan.filename %>" alt="<%= pelanggan.filename %>" width="50" height="50" style="object-fit: cover;"></td>
                    <td>
                        <a href="/edit-pelanggan/<%= pelanggan.id_pelanggan %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/delete-pelanggan/<%= pelanggan.id_pelanggan %>" class="btn btn-danger btn-sm"
                            onclick="return confirm('Yakin ingin menghapus data ini?')">Hapus</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>